<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramesh.myapplication.Main4Activity">


    <EditText
        android:layout_margin="15dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logeditText1"
        android:hint="@string/enter_your_email_id"
        />
    <EditText
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logeditText2"
        android:hint="@string/enter_your_password"
        android:layout_below="@+id/logeditText1"
        />
    <Button
        android:layout_margin="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logeditText2"
        android:text="@string/register"
        android:layout_centerHorizontal="true"
        android:id="@+id/logbutton"
        />
    <TextView
        android:id="@+id/logtextView"
        android:text="                          Not Registered?Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:layout_below="@id/logbutton"
        />

</RelativeLayout>

